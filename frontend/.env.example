# MindTube Frontend Environment Configuration

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
NEXT_PUBLIC_API_BASE=http://localhost:8000

# =============================================================================
# Application Settings
# =============================================================================

# Environment
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Application metadata
NEXT_PUBLIC_APP_NAME=MindTube
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered YouTube Summarizer

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# External Services (Frontend)
# =============================================================================

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id_here
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token_here

# Error reporting (optional)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# Development Settings
# =============================================================================

# Development flags
NEXT_PUBLIC_DEBUG=true
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# API timeouts (milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000
NEXT_PUBLIC_POLLING_INTERVAL=2000

# =============================================================================
# UI Configuration
# =============================================================================

# Default settings
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_MAX_HISTORY_ITEMS=20
NEXT_PUBLIC_AUTO_SAVE_SETTINGS=true