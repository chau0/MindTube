# MindTube MVP Environment Configuration

# =============================================================================
# API Keys & External Services
# =============================================================================

# YouTube Data API v3 (required for video metadata and captions)
YOUTUBE_API_KEY=your_youtube_api_key_here

# OpenAI API (primary LLM provider)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative LLM providers (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# =============================================================================
# Backend Configuration
# =============================================================================

# FastAPI settings
BACKEND_HOST=localhost
BACKEND_PORT=8000
DEBUG=true
LOG_LEVEL=info

# Database (SQLite for MVP, PostgreSQL for production)
DATABASE_URL=sqlite:///./mindtube.db
# DATABASE_URL=postgresql://user:password@localhost/mindtube

# Redis (optional, for job queue and caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Frontend Configuration  
# =============================================================================

# Next.js API base URL
NEXT_PUBLIC_API_BASE=http://localhost:8000

# =============================================================================
# Processing Configuration
# =============================================================================

# Video processing limits
MAX_VIDEO_DURATION_MINUTES=90
MAX_CONCURRENT_JOBS=3
DEFAULT_CHUNK_SIZE_TOKENS=1500

# LLM Configuration
DEFAULT_MAP_MODEL=gpt-4o-mini
DEFAULT_REDUCE_MODEL=gpt-4o-mini
MAX_TOKENS_PER_REQUEST=4000
TEMPERATURE=0.1

# ASR Configuration (Whisper)
ENABLE_ASR_FALLBACK=true
WHISPER_MODEL=small
MAX_ASR_DURATION_MINUTES=120

# =============================================================================
# Storage & Caching
# =============================================================================

# Local storage paths
ARTIFACTS_DIR=./data/artifacts
CACHE_DIR=./data/cache
LOGS_DIR=./data/logs

# Cache settings
CACHE_TTL_HOURS=168  # 7 days
MAX_CACHE_SIZE_MB=1000

# =============================================================================
# Security & Privacy
# =============================================================================

# JWT settings (if implementing auth later)
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Privacy settings
STORE_TRANSCRIPTS=false
STORE_USER_DATA=false
ENABLE_ANALYTICS=false

# =============================================================================
# Development & Monitoring
# =============================================================================

# Development flags
ENABLE_CORS=true
ENABLE_DOCS=true
ENABLE_METRICS_ENDPOINT=true

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# Cost & Rate Limiting
# =============================================================================

# Budget controls
MAX_COST_PER_VIDEO_USD=0.50
DAILY_BUDGET_USD=10.00
ENABLE_COST_TRACKING=true

# Rate limiting
REQUESTS_PER_MINUTE=30
REQUESTS_PER_HOUR=100