	@echo "ðŸ§¹ Maintenance:"
	@echo "  test-clean         - Clean test artifacts"
	@echo ""

# Variables for test execution
PYTHON := python3
PYTEST := $(PYTHON) -m pytest
PYTEST_ARGS := -v --tb=short
COVERAGE_ARGS := --cov=app --cov-report=term-missing
COVERAGE_HTML := --cov-report=html
COVERAGE_FAIL := --cov-fail-under=80

# Test setup - install dependencies
test-setup:
	@echo "ðŸ”§ Setting up test environment..."
	@echo "ðŸ“¦ Installing test dependencies..."
	$(PYTHON) -m pip install pytest pytest-asyncio pytest-cov pytest-watch pytest-xdist httpx
	@echo "ðŸ“ Creating test directories..."
	@mkdir -p tests/{unit,integration,e2e}
	@mkdir -p htmlcov
	@echo "âœ… Test environment ready!"

# Run TDD test runner (no external dependencies required)
test-tdd:
	@echo "ðŸš€ Running TDD test runner..."
	@if [ -f run_tdd_tests.py ]; then \
		$(PYTHON) run_tdd_tests.py; \
	else \
		echo "âŒ run_tdd_tests.py not found. Please ensure it exists."; \
		exit 1; \
	fi

# Run all tests with coverage
test-all:
	@echo "ðŸ§ª Running complete test suite..."
	$(PYTEST) tests/ $(PYTEST_ARGS) $(COVERAGE_ARGS)

# Run unit tests only
test-unit:
	@echo "ðŸ”¬ Running unit tests..."
	$(PYTEST) tests/unit/ $(PYTEST_ARGS)

# Run integration tests only
test-integration:
	@echo "ðŸ”— Running integration tests..."
	$(PYTEST) tests/integration/ $(PYTEST_ARGS)

# Run end-to-end tests only
test-e2e:
	@echo "ðŸŽ¯ Running end-to-end tests..."
	$(PYTEST) tests/e2e/ $(PYTEST_ARGS)

# Run tests with detailed coverage report
test-coverage:
	@echo "ðŸ“Š Running tests with detailed coverage analysis..."
	$(PYTEST) tests/ $(PYTEST_ARGS) $(COVERAGE_ARGS) $(COVERAGE_HTML) $(COVERAGE_FAIL)
	@echo "ðŸ“„ Coverage report generated in htmlcov/index.html"

# Run tests in watch mode
test-watch:
	@echo "ðŸ‘€ Running tests in watch mode..."
	@echo "ðŸ’¡ Tests will re-run automatically when files change"
	@echo "ðŸ›‘ Press Ctrl+C to stop"
	$(PYTHON) -m pytest_watch tests/ -- $(PYTEST_ARGS)

# Run fast tests only (exclude slow markers)
test-fast:
	@echo "âš¡ Running fast tests..."
	$(PYTEST) tests/unit/ tests/integration/ $(PYTEST_ARGS) -m "not slow"

# Run slow tests only
test-slow:
	@echo "ðŸŒ Running slow tests..."
	$(PYTEST) tests/ $(PYTEST_ARGS) -m "slow"

# Run Azure OpenAI specific tests
test-azure:
	@echo "â˜ï¸  Running Azure OpenAI integration tests..."
	$(PYTEST) tests/ $(PYTEST_ARGS) -k "azure or llm or summarization"

# Run API endpoint tests
test-api:
	@echo "ðŸŒ Running API endpoint tests..."
	$(PYTEST) tests/integration/test_api_endpoints.py tests/e2e/ $(PYTEST_ARGS)

# Run LLM functionality tests
test-llm:
	@echo "ðŸ¤– Running LLM functionality tests..."
	$(PYTEST) tests/ $(PYTEST_ARGS) -k "llm or summarization or token"

# Run tests in parallel
test-parallel:
	@echo "âš¡ Running tests in parallel..."
	$(PYTEST) tests/ $(PYTEST_ARGS) -n auto

# Run tests with debugging enabled
test-debug:
	@echo "ðŸ› Running tests with debugging enabled..."
	$(PYTEST) tests/ -v -s --tb=long --pdb-trace

# Run specific test file
test-file:
	@echo "ðŸ“„ Running specific test file..."
	@if [ -z "$(FILE)" ]; then \
		echo "âŒ Please specify FILE=path/to/test_file.py"; \
		exit 1; \
	fi
	$(PYTEST) $(FILE) $(PYTEST_ARGS)

# Run specific test function
test-func:
	@echo "ðŸŽ¯ Running specific test function..."
	@if [ -z "$(FUNC)" ]; then \
		echo "âŒ Please specify FUNC=test_function_name"; \
		exit 1; \
	fi
	$(PYTEST) tests/ $(PYTEST_ARGS) -k "$(FUNC)"

# Run tests with specific markers
test-marker:
	@echo "ðŸ·ï¸  Running tests with marker..."
	@if [ -z "$(MARKER)" ]; then \
		echo "âŒ Please specify MARKER=marker_name"; \
		exit 1; \
	fi
	$(PYTEST) tests/ $(PYTEST_ARGS) -m "$(MARKER)"

# Clean test artifacts
test-clean:
	@echo "ðŸ§¹ Cleaning test artifacts..."
	@rm -rf .pytest_cache/
	@rm -rf htmlcov/
	@rm -f .coverage
	@rm -f coverage.xml
	@find . -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null || true
	@find . -type f -name "*.pyc" -delete 2>/dev/null || true
	@echo "âœ… Test artifacts cleaned!"

# Test performance benchmarks
test-perf:
	@echo "ðŸ“ˆ Running performance tests..."
	$(PYTEST) tests/ $(PYTEST_ARGS) -m "perf" --benchmark-only

# Test with different Python versions (if available)
test-multi-python:
	@echo "ðŸ Testing with multiple Python versions..."
	@for python in python3.9 python3.10 python3.11 python3.12; do \
		if command -v $$python >/dev/null 2>&1; then \
			echo "Testing with $$python..."; \
			$$python -m pytest tests/unit/ -v --tb=short; \
		fi; \
	done

# Generate test report
test-report:
	@echo "ðŸ“‹ Generating comprehensive test report..."
	$(PYTEST) tests/ $(PYTEST_ARGS) $(COVERAGE_ARGS) $(COVERAGE_HTML) --junitxml=test-results.xml
	@echo "ðŸ“„ Test report generated:"
	@echo "  - HTML Coverage: htmlcov/index.html"
	@echo "  - JUnit XML: test-results.xml"

# Validate test structure
test-validate:
	@echo "ðŸ” Validating test structure..."
	@echo "ðŸ“ Checking test directories..."
	@test -d tests/unit || (echo "âŒ tests/unit/ directory missing" && exit 1)
	@test -d tests/integration || (echo "âŒ tests/integration/ directory missing" && exit 1)
	@test -d tests/e2e || (echo "âŒ tests/e2e/ directory missing" && exit 1)
	@echo "ðŸ“„ Checking test files..."
	@find tests/ -name "test_*.py" | head -5 | while read file; do echo "  âœ… $$file"; done
	@echo "ðŸ”§ Checking pytest configuration..."
	@test -f pytest.ini || echo "âš ï¸  pytest.ini not found"
	@test -f .coveragerc || echo "âš ï¸  .coveragerc not found"
	@echo "âœ… Test structure validation complete!"

# Show test statistics
test-stats:
	@echo "ðŸ“Š Test Statistics:"
	@echo "==================="
	@echo "ðŸ“ Test files: $$(find tests/ -name 'test_*.py' | wc -l)"
	@echo "ðŸ§ª Unit tests: $$(find tests/unit/ -name 'test_*.py' | wc -l)"
	@echo "ðŸ”— Integration tests: $$(find tests/integration/ -name 'test_*.py' | wc -l)"
	@echo "ðŸŽ¯ E2E tests: $$(find tests/e2e/ -name 'test_*.py' | wc -l)"
	@if command -v pytest >/dev/null 2>&1; then \
		echo "ðŸ”¢ Total test functions: $$($(PYTEST) --collect-only -q tests/ 2>/dev/null | grep -c '<Function' || echo 'N/A')"; \
	fi

# Example usage targets
test-examples:
	@echo "ðŸ’¡ Test Command Examples:"
	@echo "========================"
	@echo ""
